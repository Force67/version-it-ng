# App component configuration
# Uses semantic versioning for the Python application

versioning-scheme: semantic
first-version: 1.0.0
current-version-file: version.txt

# Generate Python version file
version-headers:
  - path: version.py
    template: |
      """
      Version information for the app component
      Generated by version-it
      """

      __version__ = "{{version}}"
      __scheme__ = "{{scheme}}"
      __channel__ = "{{channel}}"
      __git_commit__ = "{{git.commit_hash}}"
      __git_branch__ = "{{git.branch}}"
      __build_date__ = "{{build.date}}"