versioning-scheme: semantic-commit
first-version: 0.1.0
commit-based-bumping: true
change-type-map:
  - label: "feat"
    action: minor
  - label: "fix"
    action: patch
  - label: "BREAKING"
    action: major
commit-message-template: "chore: bump version to {{version}} [skip ci]"
run-on-branches: ["main"]